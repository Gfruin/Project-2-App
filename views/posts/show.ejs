<%- include ../partials/header.ejs %>
<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Post Show Page</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/css/style.css">
		<link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">

</head>
<body id="postshowpagebody">
	<div class="container">
		<div class="row">
			<div class="col-sm">
	<h1>Post Display</h1>
	<h2> post name is <%= post.title %></h2>
	<h3>Post Description: </h3>
	<p><%=post.description%></p>
<!-- 	<h4>Your posts here: </h4> -->
</div>
<div class="col-sm">
		<h1>Edit Post</h1>
		<form action="/posts/<%= post._id%>/edit">
			<button>EDIT!</button>
		</form>
		<form action="/posts/<%=post._id%>?_method=DELETE" method="POST">
			<h1>Delete Post</h1>
			<button>Delete</button>
		</form>
	<br>
	</div>
	<div class="col-sm">
	<h2>Comment section here</h2>
	<form action="/comments/<%=post._id%>" method="POST">
		<textarea name="text"></textarea>
		<button>Add comment</button>
	</form>
	<br>
	<h3>Comments:</h3>
	<%post.comments.forEach((comment) => {%>
		<p id="commentuser"><%= comment.user.username %></p>
		<p id="commenttext"><%= comment.text %></p>
		<small><%=(new Date(comment.date)).toLocaleString() %></small>
	<%})%>
	</div>
	</div>
	</div>

	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>
</html>